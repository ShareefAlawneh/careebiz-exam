{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": false,
    "paths": {
      "@careebiz/components/*":[
        "src/components/*"
      ],
      "@careebiz/pages/*":[
        "src/pages/*"
      ],
      "@careebiz/app-ducks/*":[
        "src/app-ducks/*"
      ],
      "@careebiz/types":[
        "src/types/index.ts"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "webpack",
  ]
}
